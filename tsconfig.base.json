{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dashboard-web-client/bls-configs": ["libs/bls-configs/src/index.ts"],
      "@dashboard-web-client/bls-constants": [
        "libs/bls-constants/src/index.ts"
      ],
      "@dashboard-web-client/bls-models": ["libs/bls-models/src/index.ts"],
      "@dashboard-web-client/bls-plugin": ["bls-plugin/src/index.ts"],
      "@dashboard-web-client/bls-store": ["libs/bls-store/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
